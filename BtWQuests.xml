			<OnMouseUp>
                if ( button == "RightButton" ) then
                    BtWQuests_ZoomOut()
                end
			</OnMouseUp>
			<OnClick>
                if not ChatEdit_TryInsertChatLink(self.link) then
                    BtWQuestsNav_AddCategoryButton(self.categoryID, self.nameText)
                    
                    BtWQuests_SetCurrentCategory(self.categoryID)
                    BtWQuests_ListCategories()
                    
                    PlaySound(SOUNDKIT.IG_SPELLBOOK_OPEN);
                end
			</OnClick>
		</Scripts>
	</Button>
    
	<Button name="BtWQuestsChainButtonTemplate" inherits="BtWQuestsCategoryButtonTemplate" hidden="true" parentArray="ChainButtons" virtual="true">
		<Scripts>
			<OnClick>
                if not ChatEdit_TryInsertChatLink(self.link) then
                    BtWQuestsNav_AddChainButton(self.chainID, self.nameText)
                    
                    BtWQuests_SetCurrentChain(self.chainID)
                    BtWQuests_DisplayChain()
                    
                    PlaySound(SOUNDKIT.IG_SPELLBOOK_OPEN);
                end
			</OnClick>
			<OnEnter>
                BtWQuestsTooltip_AnchorTo(self)
                BtWQuestsTooltip_SetChain(self.chainID)
            </OnEnter>
			<OnLeave>
                BtWQuestsTooltip:Hide();
            </OnLeave>
		</Scripts>
    </Button>
